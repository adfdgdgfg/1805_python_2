class Cat():
    __instance  = None
    def __new__(cls,*args,**kwargs):
        if cls.__instance == None:
            cls.__instance =  object.__new__(cls)
            return cls.__instance#第一次
        else:
            return cls.__instance#除了第一次

    def __init__(self,name):
        self.name = name



tom = Cat("tom")
print(id(tom))
tom1 = Cat("tom1")
print(id(tom1))

